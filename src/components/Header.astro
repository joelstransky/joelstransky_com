---
import { Image } from 'astro:assets';
import { getEntry } from 'astro:content';

const general = await getEntry('settings','general');
---

<header class="block relative">
  <div class="flex flex-col">
    <div class="flex flex-col w-full mx-auto px-8 py-16 md:max-w-7xl">
      <div class="flex grow flex-wrap">
        <a href="/" class="flex w-auto basis-0 grow min-w-0 max-w-full items-center flex-[0_0_auto] gap-6">
          <span class="text-2xl font-light -tracking-wider">{general.data.title}</span>
        </a>
      </div>
    </div>
  </div>
</header>
